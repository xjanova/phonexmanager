                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                        <ItemsControl ItemsSource="{Binding GuidesViewModel.SelectedBootloaderGuide.Steps}">
