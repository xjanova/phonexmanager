                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedDevice.Model, FallbackValue='No Device'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>

                    <!-- Current Operation (Center) -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentOperation, FallbackValue='Ready'}"
                                   Foreground="{StaticResource PrimaryLightBrush}" FontSize="11" FontWeight="Medium"/>
                    </StackPanel>

                    <!-- Data Transfer -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="â†‘" Foreground="#10B981" FontSize="11" Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding DataSent, FallbackValue='0 KB'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                        <TextBlock Text="â†“" Foreground="#00D4FF" FontSize="11" Margin="8,0,2,0"/>
                        <TextBlock Text="{Binding DataReceived, FallbackValue='0 KB'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>

                    <Border Grid.Column="5" Width="1" Background="#1E3A5F" Margin="10,6"/>

                    <!-- Debug Button -->
                    <Button Grid.Column="6" Content="Debug" FontSize="9" Padding="8,2" Margin="0"
                            Click="ShowDebugPanel_Click" Cursor="Hand" VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="#1B2838" CornerRadius="3" Padding="8,3"
                                                    BorderBrush="#2D4A6F" BorderThickness="1">
                                                <TextBlock Text="Debug" FontSize="9" Foreground="#8892A0"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Border Grid.Column="7" Width="1" Background="#1E3A5F" Margin="10,6"/>

                    <!-- License Info -->
                    <TextBlock Grid.Column="8" FontSize="9" VerticalAlignment="Center"
                               Foreground="{StaticResource TextDisabledBrush}">
                        <Run Text="Licensed to Xman Studio"/>
                        <Run Text=" | " Foreground="#1E3A5F"/>
                        <Run Text="{Binding AppVersion, FallbackValue='v1.0.0'}" Foreground="#00D4FF"/>
                    </TextBlock>
                </Grid>
            </Border>

            </Grid>
        </Grid>
    </Border>

    <!-- Debug Panel Popup -->
    <Window.Resources>
        <Style x:Key="DebugPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#00D4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </Window.Resources>
</Window>
