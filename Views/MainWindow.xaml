                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Foreground="{StaticResource AccentBrush}">
                                                        <Run Text="0x"/><Run Text="{Binding Offset, StringFormat=X8}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Context}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>

                            <!-- ROM Analysis -->
                            <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
