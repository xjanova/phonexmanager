                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               TextWrapping="Wrap" Margin="0,4"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Warnings -->
                                    <TextBlock Text="Warnings" FontWeight="Bold" FontSize="14"
                                               Foreground="{StaticResource DangerBrush}" Margin="0,0,0,8"/>
                                    <Border Background="#2D1F1F" BorderBrush="{StaticResource DangerBrush}"
                                            BorderThickness="1" CornerRadius="8" Padding="16">
                                        <ItemsControl ItemsSource="{Binding GuidesViewModel.SelectedBootloaderGuide.Warnings}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <TextBlock Text="âš ï¸" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding}" Foreground="{StaticResource DangerBrush}"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
