                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="ROM Analysis"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>

                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="{Binding RomAnalysis.FileType, StringFormat='Type: {0}'}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding RomAnalysis.FileSize, StringFormat='Size: {0:N0} bytes'}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="Patterns:"
                                                       Foreground="{StaticResource AccentBrush}"
                                                       Margin="0,8,0,0"/>
                                            <ItemsControl ItemsSource="{Binding RomAnalysis.DetectedPatterns}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   Margin="8,2,0,0"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Downloads Tab -->
            <TabItem Header="Downloads">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Update Check Panel -->
                    <Border Grid.Row="0" Grid.ColumnSpan="2"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Tools &amp; Drivers Update"
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0">
                                    <Run Text="Last checked: "/>
                                    <Run Text="{Binding LastUpdateCheck, Mode=OneWay, StringFormat=yyyy-MM-dd HH:mm}"/>
                                </TextBlock>
                                <TextBlock Foreground="{StaticResource AccentBrush}"
                                           FontWeight="Bold">
                                    <Run Text="{Binding ToolsInstalled, Mode=OneWay}"/>
                                    <Run Text=" tools installed"/>
                                </TextBlock>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="Check for Updates"
                                    Command="{Binding CheckForUpdatesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Grid.Column="2"
                                    Content="Download All Essentials"
                                    Command="{Binding DownloadAllEssentialsCommand}"
                                    Style="{StaticResource AccentButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Tools Panel -->
                    <Border Grid.Row="1" Grid.Column="0"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Essential Tools"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>

                            <Button Grid.Row="1"
                                    Content="Download Platform Tools (ADB/Fastboot)"
                                    Command="{Binding DownloadPlatformToolsCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,16"/>

                            <ListBox Grid.Row="2"
                                     ItemsSource="{Binding AvailableTools}"
                                     Style="{StaticResource DarkListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Version}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding Path}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding IsInstalled, Converter={StaticResource BoolToStatusConverter}}"
                                                           Foreground="{Binding IsInstalled, Converter={StaticResource BoolToColorConverter}}"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- Drivers Panel -->
                    <Border Grid.Row="1" Grid.Column="1"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="8,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Mobile Drivers"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding AvailableDrivers}"
                                     Style="{StaticResource DarkListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Version}"
                                                               Foreground="{StaticResource AccentBrush}"
                                                               FontSize="10"/>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Content="Download"
                                                        Command="{Binding DataContext.DownloadDriverCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding Id}"
                                                        Style="{StaticResource PrimaryButtonStyle}"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- ROM Database Tab - Professional Design -->
            <TabItem Header="ROM Database">
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Categories -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                                <TextBlock Text="ROM Categories"
                                           FontSize="18" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                    <Run Text="Total: "/>
                                    <Run Text="{Binding RomDbViewModel.TotalRomCount, Mode=OneWay}"/>
                                    <Run Text=" ROMs"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Filter Toggles -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                <CheckBox Content="Show Rare/Legacy Only"
                                          IsChecked="{Binding RomDbViewModel.ShowRareOnly}"
                                          Foreground="{StaticResource RareBrush}"
                                          Margin="0,4"/>
                                <CheckBox Content="Show Modified Only"
                                          IsChecked="{Binding RomDbViewModel.ShowModifiedOnly}"
                                          Foreground="{StaticResource WarningBrush}"
                                          Margin="0,4"/>
                            </StackPanel>

