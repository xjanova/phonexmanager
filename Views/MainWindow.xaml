                        <!-- Search Results & Analysis -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Search Results -->
                            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                                    CornerRadius="8" Padding="8" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Search Results"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>

                                    <ListBox Grid.Row="1"
                                             ItemsSource="{Binding SearchResults}"
                                             SelectedItem="{Binding SelectedSearchResult}"
                                             Style="{StaticResource DarkListBoxStyle}"
