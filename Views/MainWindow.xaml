                                               Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <Border CornerRadius="10" Background="{StaticResource PrimaryDarkBrush}"
                                                Padding="10,4" Margin="0,0,8,0">
                                            <TextBlock FontSize="11" Foreground="White">
                                                <Run Text="Wait: "/>
                                                <Run Text="{Binding GuidesViewModel.SelectedBootloaderGuide.WaitTime}"/>
                                            </TextBlock>
                                        </Border>
                                        <Button Content="Official Site"
                                                Command="{Binding GuidesViewModel.OpenOfficialUrlCommand}"
                                                CommandParameter="{Binding GuidesViewModel.SelectedBootloaderGuide.OfficialUrl}"
