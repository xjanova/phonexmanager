                                          Width="200"
                                          HorizontalAlignment="Left"
                                          Margin="0,8,0,0"/>

                                <Button Grid.Row="2" Grid.Column="1"
                                        Content="Flash ROM"
                                        Command="{Binding FlashPartitionCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Left"
                                        Margin="0,16,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
