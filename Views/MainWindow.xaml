                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="12,10" Margin="0,2" CornerRadius="6"
                                                Background="{StaticResource SurfaceLightBrush}"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                           FontSize="18" VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <Border Grid.Column="2" CornerRadius="10"
                                                        Background="{StaticResource PrimaryBrush}"
                                                        Padding="8,4" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding RomCount}"
                                                               FontSize="11" FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                            <!-- Show All Button -->
                            <Button Grid.Row="3" Content="Show All ROMs"
                                    Command="{Binding RomDbViewModel.LoadAllRomsCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,12,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Center Panel - ROM List -->
                    <Grid Grid.Column="1" Margin="8,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search and Filter Bar -->
                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding RomDbViewModel.SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         Tag="Search by brand, model, codename..."/>

                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding RomDbViewModel.BrandFilter}"
                                          SelectedItem="{Binding RomDbViewModel.SelectedBrand}"
                                          Width="150" Margin="8,0,0,0"/>

                                <Button Grid.Column="2" Content="Refresh"
                                        Command="{Binding RomDbViewModel.RefreshDatabaseCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- ROM DataGrid -->
                        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="0">
                            <DataGrid ItemsSource="{Binding RomDbViewModel.FilteredRoms}"
                                      SelectedItem="{Binding RomDbViewModel.SelectedRom}"
                                      Style="{StaticResource DarkDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Status" Width="70">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="âš ï¸" FontSize="14"
                                                               Visibility="{Binding IsModified, Converter={StaticResource BoolToVisibilityConverter}}"
                                                               ToolTip="Modified ROM - Use with caution!"/>
                                                    <TextBlock Text="ðŸ’Ž" FontSize="14"
                                                               Visibility="{Binding IsRare, Converter={StaticResource BoolToVisibilityConverter}}"
                                                               ToolTip="Rare/Hard to find ROM"/>
                                                    <TextBlock Text="âœ“" FontSize="14" Foreground="{StaticResource SuccessBrush}"
                                                               Visibility="{Binding IsVerified, Converter={StaticResource BoolToVisibilityConverter}}"
                                                               ToolTip="Verified ROM"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="90"/>
                                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="140"/>
                                    <DataGridTextColumn Header="Codename" Binding="{Binding Codename}" Width="100"/>
                                    <DataGridTextColumn Header="Android" Binding="{Binding AndroidVersion}" Width="70"/>
                                    <DataGridTextColumn Header="ROM Type" Binding="{Binding RomType}" Width="120"/>
                                    <DataGridTemplateColumn Header="Risk" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="10" Padding="8,3"
                                                        HorizontalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="1">
                                                                    <Setter Property="Background" Value="#1B5E20"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="2">
                                                                    <Setter Property="Background" Value="#33691E"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="3">
                                                                    <Setter Property="Background" Value="#E65100"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="4">
                                                                    <Setter Property="Background" Value="#BF360C"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="5">
                                                                    <Setter Property="Background" Value="#B71C1C"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding RiskLevelText}"
                                                               FontSize="10" FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Source" Binding="{Binding SourceName}" Width="100"/>
                                    <DataGridTemplateColumn Header="Action" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Open"
                                                        Command="{Binding DataContext.RomDbViewModel.OpenRomDownloadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource PrimaryButtonStyle}"
                                                        Padding="8,2"
                                                        FontSize="11"
                                                        Margin="2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>

