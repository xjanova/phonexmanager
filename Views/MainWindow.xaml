                                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                                </Grid>

                                <WrapPanel Margin="0,12,0,0">
                                    <Button Content="Read IMEI" Command="{Binding ReadImeiCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Backup EFS" Command="{Binding BackupEfsCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Restore EFS" Command="{Binding RestoreEfsCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
