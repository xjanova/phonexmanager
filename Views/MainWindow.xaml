                                        <DataGridTextColumn Header="Package Name" Binding="{Binding PackageName}" Width="*" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Risk" Binding="{Binding RiskLevel}" Width="80" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
