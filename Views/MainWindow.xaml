                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="ROM Details"
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,16"/>

                                    <!-- No Selection Message -->
                                    <TextBlock Text="Select a ROM to view details"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontStyle="Italic"
                                               Visibility="{Binding RomDbViewModel.HasSelectedRom, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>

                                    <!-- ROM Info -->
                                    <StackPanel Visibility="{Binding RomDbViewModel.HasSelectedRom, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding RomDbViewModel.SelectedRom.DisplayName}"
                                                   FontSize="18" FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryLightBrush}"
                                                   TextWrapping="Wrap" Margin="0,0,0,8"/>

                                        <!-- Category Badge -->
                                        <Border CornerRadius="12" Padding="10,4" Margin="0,0,0,12"
                                                HorizontalAlignment="Left"
                                                Background="{StaticResource PrimaryDarkBrush}">
                                            <TextBlock FontSize="11" Foreground="White">
                                                <Run Text="{Binding RomDbViewModel.SelectedRom.CategoryIcon}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding RomDbViewModel.SelectedRom.CategoryName}"/>
                                            </TextBlock>
                                        </Border>

                                        <!-- Info Grid -->
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Codename:"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding RomDbViewModel.SelectedRom.Codename}"
                                                       Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Android:"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding RomDbViewModel.SelectedRom.AndroidVersion}"
                                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1"
                                                       Text="{Binding RomDbViewModel.SelectedRom.RomType}"
                                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Source:"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1"
                                                       Text="{Binding RomDbViewModel.SelectedRom.SourceName}"
                                                       Foreground="{StaticResource InfoBrush}" Margin="0,4,0,0"/>
                                        </Grid>

                                        <!-- Description -->
                                        <TextBlock Text="Description"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12" Margin="0,8,0,4"/>
                                        <TextBlock Text="{Binding RomDbViewModel.SelectedRom.Description}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   TextWrapping="Wrap" Margin="0,0,0,12"/>

                                        <!-- Warning Box -->
                                        <Border Style="{StaticResource WarningCardStyle}"
                                                Visibility="{Binding RomDbViewModel.SelectedRom.HasWarning, Converter={StaticResource BoolToVisibilityConverter}}"
                                                Margin="0,0,0,12">
                                            <StackPanel>
                                                <TextBlock Text="âš ï¸ Warning"
                                                           FontWeight="Bold" FontSize="13"
                                                           Foreground="{StaticResource WarningBrush}"
                                                           Margin="0,0,0,6"/>
                                                <TextBlock Text="{Binding RomDbViewModel.SelectedRom.Warnings}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Tips -->
                                        <Border Background="{StaticResource SurfaceLightBrush}"
                                                CornerRadius="6" Padding="12" Margin="0,0,0,12"
                                                Visibility="{Binding RomDbViewModel.SelectedRom.Tips, Converter={StaticResource NullToVisibilityConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="ðŸ’¡ Tips"
                                                           FontWeight="Bold" FontSize="12"
                                                           Foreground="{StaticResource PrimaryLightBrush}"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding RomDbViewModel.SelectedRom.Tips}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Action Buttons -->
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Button Content="Open Download"
                                                    Command="{Binding RomDbViewModel.OpenDownloadUrlCommand}"
                                                    Style="{StaticResource AccentButtonStyle}"/>
                                            <Button Content="Copy URL"
                                                    Command="{Binding RomDbViewModel.CopyDownloadUrlCommand}"
                                                    Style="{StaticResource PrimaryButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- Tips Panel -->
