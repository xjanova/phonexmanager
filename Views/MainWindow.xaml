<Window x:Class="PhoneRomFlashTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PhoneRomFlashTool.ViewModels"
        mc:Ignorable="d"
        Title="PhoneX Manager - Xman Studio"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#0D1117" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Icon & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <Border Width="24" Height="24" CornerRadius="4" Background="{StaticResource PrimaryBrush}" Margin="0,0,10,0">
                            <TextBlock Text="X" FontWeight="Bold" FontSize="14" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="PhoneX Manager" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding AppVersion}" FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,4,0">
                        <Button Content="â”€" Width="40" Height="32"
                                Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}"
                                BorderThickness="0" FontSize="12" Cursor="Hand"
                                Click="MinimizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2D333B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="â–¡" Width="40" Height="32"
                                Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}"
                                BorderThickness="0" FontSize="12" Cursor="Hand"
                                Click="MaximizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2D333B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âœ•" Width="40" Height="32"
                                Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}"
                                BorderThickness="0" FontSize="12" Cursor="Hand"
                                Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C42B1C"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Header Bar -->
            <Border Grid.Row="1" Padding="16,12">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1565C0" Offset="0"/>
                        <GradientStop Color="#0D47A1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Connection Status Indicator -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Width="12" Height="12" CornerRadius="6" Margin="0,0,10,0" VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#F44336"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDeviceConnected}" Value="True">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <TextBlock Text="{Binding ConnectionStatus, FallbackValue='No Device'}"
                                   FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Device Selector -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ComboBox ItemsSource="{Binding ConnectedDevices}"
                                  SelectedItem="{Binding SelectedDevice}"
                                  DisplayMemberPath="DisplayName"
                                  Width="280"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <Button Command="{Binding RefreshDevicesCommand}"
                                VerticalAlignment="Center" Padding="10,6" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FFFFFF20"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="âŸ³ Refresh" FontSize="12"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFFFFF40"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <TabControl Grid.Row="2" Background="{StaticResource BackgroundBrush}"
                    Foreground="{StaticResource TextPrimaryBrush}"
                    Margin="8">

            <!-- Setup Tab -->
            <TabItem Header="âš™ Setup" DataContext="{Binding SetupViewModel}">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="150"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Tools &amp; Driver Setup"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Install required tools and drivers for flashing Android devices"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Main Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tools Panel -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="0,0,8,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="ðŸ“¦ Tools" FontSize="16" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <ItemsControl Grid.Row="1" ItemsSource="{Binding ToolItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceLightBrush}"
                                                    CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                                               FontSize="18" VerticalAlignment="Center"
                                                               Foreground="{StaticResource SuccessBrush}"
                                                               Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                                        <TextBlock Text="{Binding Description}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="11" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding Status}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="10" Margin="0,4,0,0"/>
                                                    </StackPanel>

                                                    <ProgressBar Grid.Column="2" Width="60" Height="4"
                                                                 Value="{Binding Progress}" Maximum="100"
                                                                 Visibility="{Binding IsInstalling, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                 VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Install Platform Tools"
                                            Command="{Binding InstallPlatformToolsCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,8,0"/>
                                    <Button Content="Install All"
                                            Command="{Binding InstallAllToolsCommand}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Drivers Panel -->
                        <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="8,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="ðŸ”Œ Drivers" FontSize="16" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <ItemsControl Grid.Row="1" ItemsSource="{Binding DriverItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceLightBrush}"
                                                    CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                                               FontSize="18" VerticalAlignment="Center"
                                                               Foreground="{StaticResource SuccessBrush}"
                                                               Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                                        <TextBlock Text="{Binding Description}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="11" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding Status}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="10" Margin="0,4,0,0"/>
                                                    </StackPanel>

                                                    <ProgressBar Grid.Column="2" Width="60" Height="4"
                                                                 Value="{Binding Progress}" Maximum="100"
                                                                 Visibility="{Binding IsInstalling, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                 VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Install Google Driver"
                                            Command="{Binding InstallGoogleDriverCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,8,0"/>
                                    <Button Content="Install All"
                                            Command="{Binding InstallAllDriversCommand}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Action Bar -->
                    <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="12" Margin="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding StatusMessage}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <ProgressBar Width="200" Height="4" Margin="16,0,0,0"
                                             Value="{Binding OverallProgress}" Maximum="100"
                                             VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="1" Content="Open Tools Folder"
                                    Command="{Binding OpenToolsFolderCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,8,0"/>

                            <Button Grid.Column="2" Content="ðŸ”„ Check All"
                                    Command="{Binding CheckAllCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Setup Logs -->
                    <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="8" Margin="0,8,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="Setup Log" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="Clear" Command="{Binding ClearLogsCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,2" Margin="16,0,0,0" FontSize="10"/>
                            </StackPanel>

                            <ListBox Grid.Row="1" ItemsSource="{Binding Logs}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     FontFamily="Consolas" FontSize="11"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Device Tab -->
            <TabItem Header="Device">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Device Info Panel -->
                    <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Device Information"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Brand:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SelectedDevice.Brand, FallbackValue='-'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Bold" Margin="0,0,0,8"/>

                            <TextBlock Text="Model:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SelectedDevice.Model, FallbackValue='-'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Bold" Margin="0,0,0,8"/>

                            <TextBlock Text="Android Version:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SelectedDevice.AndroidVersion, FallbackValue='-'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Bold" Margin="0,0,0,8"/>

                            <TextBlock Text="Serial Number:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SelectedDevice.SerialNumber, FallbackValue='-'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Bold" Margin="0,0,0,8"/>

                            <TextBlock Text="Connection Type:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SelectedDevice.ConnectionType, FallbackValue='-'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Bold" Margin="0,0,0,8"/>

                            <TextBlock Text="Mode:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SelectedDevice.Mode, FallbackValue='-'}"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontWeight="Bold" Margin="0,0,0,16"/>

                            <TextBlock Text="Reboot To:" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <WrapPanel>
                                <Button Content="Recovery"
                                        Command="{Binding RebootToModeCommand}"
                                        CommandParameter="recovery"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button Content="Fastboot"
                                        Command="{Binding RebootToModeCommand}"
                                        CommandParameter="fastboot"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button Content="Normal"
                                        Command="{Binding RebootToModeCommand}"
                                        CommandParameter="normal"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Partitions Panel -->
                    <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="8,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="Device Partitions"
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Button Content="Load Partitions"
                                        Command="{Binding LoadPartitionsCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="16,0,0,0"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding DevicePartitions}"
                                      SelectedItem="{Binding SelectedPartition}"
                                      Style="{StaticResource DarkDataGridStyle}"
                                      AutoGenerateColumns="False"
                                      SelectionMode="Single"
                                      CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Backup Tab -->
            <TabItem Header="Backup">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="Backup Selected Partition"
                                Command="{Binding BackupPartitionCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                IsEnabled="{Binding SelectedPartition, Converter={StaticResource NullToBoolConverter}}"/>
                        <Button Content="Backup Full ROM"
                                Command="{Binding BackupFullRomCommand}"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Backup History"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding BackupHistory}"
                                     Style="{StaticResource DarkListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding FileName}"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding DeviceModel}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding BackupDate, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding FileSizeFormatted}"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Hex Editor Tab -->
            <TabItem Header="Hex Editor">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="8" Margin="0,0,0,8">
                        <WrapPanel>
                            <Button Content="Open Full Hex Editor"
                                    Command="{Binding OpenHexEditorWindowCommand}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    FontWeight="Bold"/>
                            <Separator Width="20" Background="Transparent"/>
                            <Button Content="Open ROM"
                                    Command="{Binding OpenRomFileCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Save"
                                    Command="{Binding SaveRomFileCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Export Hex Dump"
                                    Command="{Binding ExportHexDumpCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Export Analysis"
                                    Command="{Binding ExportAnalysisCommand}"
                                    Style="{StaticResource AccentButtonStyle}"/>
                            <Separator Width="20" Background="Transparent"/>
                            <Button Content="Undo"
                                    Command="{Binding UndoHexChangeCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Undo All"
                                    Command="{Binding UndoAllHexChangesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </WrapPanel>
                    </Border>

                    <!-- Search Panel -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="8" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,0">
                                <TextBlock Text="Hex:" Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Text="{Binding SearchHexPattern, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         Width="200"/>
                                <Button Content="Search"
                                        Command="{Binding SearchHexCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="String:" Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Text="{Binding SearchStringPattern, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         Width="200"/>
                                <Button Content="Search"
                                        Command="{Binding SearchStringCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Main Hex View -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Hex Data Grid -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="8" Margin="0,0,8,0">
                            <DataGrid ItemsSource="{Binding HexLines}"
                                      Style="{StaticResource DarkDataGridStyle}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      FontFamily="Consolas"
                                      FontSize="13">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Offset" Binding="{Binding OffsetHex}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Hex" Binding="{Binding HexString}" Width="400">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="ASCII" Binding="{Binding AsciiString}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
