            <!-- Tools Tab - ADB Terminal, Checksum, Logcat -->
            <TabItem Header="Tools">
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - ADB Terminal -->
                    <Grid Grid.Column="0" Margin="0,0,8,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text=">" FontSize="20" FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                                    <TextBlock Text="ADB Terminal"
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <!-- Quick Commands -->
                                <WrapPanel Grid.Row="1" Margin="0,0,0,8">
                                    <Button Content="devices" Style="{StaticResource PrimaryButtonStyle}"
                                            Command="{Binding ToolsViewModel.QuickCommandCommand}"
                                            CommandParameter="devices" Padding="8,4" Margin="0,0,4,4"/>
                                    <Button Content="shell" Style="{StaticResource PrimaryButtonStyle}"
                                            Command="{Binding ToolsViewModel.QuickCommandCommand}"
                                            CommandParameter="shell" Padding="8,4" Margin="0,0,4,4"/>
                                    <Button Content="reboot" Style="{StaticResource PrimaryButtonStyle}"
                                            Command="{Binding ToolsViewModel.QuickCommandCommand}"
                                            CommandParameter="reboot" Padding="8,4" Margin="0,0,4,4"/>
                                    <Button Content="reboot recovery" Style="{StaticResource PrimaryButtonStyle}"
                                            Command="{Binding ToolsViewModel.QuickCommandCommand}"
                                            CommandParameter="reboot recovery" Padding="8,4" Margin="0,0,4,4"/>
                                    <Button Content="reboot bootloader" Style="{StaticResource PrimaryButtonStyle}"
                                            Command="{Binding ToolsViewModel.QuickCommandCommand}"
                                            CommandParameter="reboot bootloader" Padding="8,4" Margin="0,0,4,4"/>
                                </WrapPanel>

                                <!-- Terminal Output -->
                                <Border Grid.Row="2" Background="#0D0D0D" CornerRadius="6" Padding="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding ToolsViewModel.TerminalOutput, Mode=OneWay}"
                                                 IsReadOnly="True"
                                                 Background="Transparent"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 BorderThickness="0"
                                                 FontFamily="Consolas"
                                                 FontSize="12"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"/>
                                    </ScrollViewer>
                                </Border>

                                <!-- Input -->
                                <Grid Grid.Row="3" Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="adb"
                                               Foreground="{StaticResource AccentBrush}"
                                               FontFamily="Consolas" FontWeight="Bold"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding ToolsViewModel.TerminalInput, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource DarkTextBoxStyle}"
                                             FontFamily="Consolas"/>
                                    <Button Grid.Column="2" Content="Run"
                                            Command="{Binding ToolsViewModel.ExecuteCommandCommand}"
                                            Style="{StaticResource AccentButtonStyle}"
                                            Margin="8,0,0,0"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Logcat Panel -->
                        <Border Grid.Row="1" Style="{StaticResource CardStyle}" MaxHeight="200">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Logcat Viewer" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding ToolsViewModel.LogcatLines}"
                                             Width="60" Margin="16,0,8,0"
                                             Style="{StaticResource DarkTextBoxStyle}"/>
                                    <TextBlock Text="lines" Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                    <Button Content="Get Logcat"
                                            Command="{Binding ToolsViewModel.GetLogcatCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="16,0,0,0"/>
                                    <Button Content="Clear"
                                            Command="{Binding ToolsViewModel.ClearLogcatCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"/>
                                </StackPanel>

                                <Border Grid.Row="1" Background="#0D0D0D" CornerRadius="4" Padding="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding ToolsViewModel.LogcatOutput, Mode=OneWay}"
                                                 IsReadOnly="True"
                                                 Background="Transparent"
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 BorderThickness="0"
                                                 FontFamily="Consolas"
                                                 FontSize="10"
                                                 TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Right Panel -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Device Info -->
                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Device Info" FontWeight="Bold" FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <Button Content="Load" Margin="16,0,0,0"
                                            Command="{Binding ToolsViewModel.GetDeviceInfoCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"/>
                                    <Button Content="Screenshot"
                                            Command="{Binding ToolsViewModel.TakeScreenshotCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"/>
                                </StackPanel>

                                <Border Grid.Row="1" Background="#0D0D0D" CornerRadius="4"
                                        Padding="8" MaxHeight="150">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding ToolsViewModel.DeviceInfo}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontFamily="Consolas" FontSize="10"
                                                   TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Checksum Verification -->
                        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Checksum Verification" FontWeight="Bold" FontSize="14"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding ToolsViewModel.ChecksumFilePath}"
                                             Style="{StaticResource DarkTextBoxStyle}"
                                             IsReadOnly="True"/>
                                    <Button Grid.Column="1" Content="Browse"
                                            Command="{Binding ToolsViewModel.BrowseFileCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="8,0,0,0"/>
                                </Grid>

                                <TextBox Text="{Binding ToolsViewModel.ExpectedHash, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         Tag="Expected hash (optional for verify)"
                                         Margin="0,0,0,8"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Button Content="Calculate"
                                            Command="{Binding ToolsViewModel.CalculateChecksumCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"/>
                                    <Button Content="Verify"
                                            Command="{Binding ToolsViewModel.VerifyChecksumCommand}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>

                                <ProgressBar Value="{Binding ToolsViewModel.ChecksumProgress}"
                                             Maximum="100" Height="4" Margin="0,0,0,8"
                                             Visibility="{Binding ToolsViewModel.IsCalculating, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!-- Results -->
                                <StackPanel Visibility="{Binding ToolsViewModel.HasChecksumResult, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="MD5:" FontWeight="Bold"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ToolsViewModel.ChecksumResult.MD5}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontFamily="Consolas" FontSize="9"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Button Grid.Column="2" Content="Copy"
                                                    Command="{Binding ToolsViewModel.CopyHashCommand}"
                                                    CommandParameter="MD5"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Padding="4,2" FontSize="10"/>
                                        </Grid>
                                    </Border>
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="SHA1:" FontWeight="Bold"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ToolsViewModel.ChecksumResult.SHA1}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontFamily="Consolas" FontSize="9"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Button Grid.Column="2" Content="Copy"
                                                    Command="{Binding ToolsViewModel.CopyHashCommand}"
                                                    CommandParameter="SHA1"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Padding="4,2" FontSize="10"/>
                                        </Grid>
                                    </Border>
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4" Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="SHA256:" FontWeight="Bold"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ToolsViewModel.ChecksumResult.SHA256}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontFamily="Consolas" FontSize="9"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Button Grid.Column="2" Content="Copy"
                                                    Command="{Binding ToolsViewModel.CopyHashCommand}"
                                                    CommandParameter="SHA256"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Padding="4,2" FontSize="10"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Quick Tips -->
                        <Border Grid.Row="2" Background="{StaticResource SurfaceLightBrush}"
                                CornerRadius="8" Padding="12">
                            <StackPanel>
                                <TextBlock Text="Quick Tips" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryLightBrush}" Margin="0,0,0,8"/>
                                <TextBlock TextWrapping="Wrap" FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run FontWeight="Bold">ADB Commands:</Run><LineBreak/>
                                    â€¢ adb devices - List connected devices<LineBreak/>
                                    â€¢ adb shell getprop - Get device properties<LineBreak/>
                                    â€¢ adb logcat - View device logs<LineBreak/>
                                    â€¢ adb reboot bootloader - Reboot to fastboot<LineBreak/>
                                    <LineBreak/>
                                    <Run FontWeight="Bold">Checksum:</Run><LineBreak/>
                                    Always verify checksums before flashing to ensure file integrity.
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Paths Settings -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Application Paths"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Tools Directory:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding Settings.ToolsPath}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         IsReadOnly="True"/>
                                <Button Grid.Row="0" Grid.Column="2"
                                        Content="Open"
                                        Command="{Binding OpenSettingsFolderCommand}"
                                        CommandParameter="tools"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="8,0,0,0"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Drivers Directory:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         Text="{Binding Settings.DriversPath}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         IsReadOnly="True" Margin="0,8,0,0"/>
                                <Button Grid.Row="1" Grid.Column="2"
                                        Content="Open"
                                        Command="{Binding OpenSettingsFolderCommand}"
                                        CommandParameter="drivers"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="8,8,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="ROMs Directory:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding Settings.RomsPath}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         IsReadOnly="True" Margin="0,8,0,0"/>
                                <Button Grid.Row="2" Grid.Column="2"
                                        Content="Open"
                                        Command="{Binding OpenSettingsFolderCommand}"
                                        CommandParameter="roms"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="8,8,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Backups Directory:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBox Grid.Row="3" Grid.Column="1"
                                         Text="{Binding Settings.BackupsPath}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         IsReadOnly="True" Margin="0,8,0,0"/>
                                <Button Grid.Row="3" Grid.Column="2"
                                        Content="Open"
                                        Command="{Binding OpenSettingsFolderCommand}"
                                        CommandParameter="backups"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="8,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Application Info -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Application Information"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Version:"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="1.0.0"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontWeight="Bold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="ADB Path:"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding Settings.AdbPath, FallbackValue='Not installed'}"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Fastboot Path:"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding Settings.FastbootPath, FallbackValue='Not installed'}"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- About -->
                    <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="About"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock TextWrapping="Wrap"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <Run FontWeight="Bold" FontSize="18">PhoneX Manager</Run>
                                <LineBreak/>
                                <Run Foreground="{StaticResource PrimaryBrush}">by Xman Studio</Run>
                                <LineBreak/>
                                <LineBreak/>
                                <Run>Version 1.0.0</Run>
                                <LineBreak/>
                                <LineBreak/>
                                A comprehensive tool for flashing, backing up, and analyzing phone ROMs.
                                <LineBreak/>
                                <LineBreak/>
                                Features:
                                <LineBreak/>
                                â€¢ Auto-download of ADB/Fastboot tools and drivers
                                <LineBreak/>
                                â€¢ Support for Qualcomm, MTK, Samsung, and Xiaomi devices
                                <LineBreak/>
                                â€¢ ROM backup and restore functionality
                                <LineBreak/>
                                â€¢ Built-in Hex Editor for ROM analysis
                                <LineBreak/>
                                â€¢ Engineer Tools (FRP, Lock Bypass, IMEI, Debloat)
                                <LineBreak/>
                                â€¢ Export capabilities for external analysis
                                <LineBreak/>
                                <LineBreak/>
                                <Run FontWeight="Bold" Foreground="{StaticResource WarningBrush}">
                                Use at your own risk. Always backup before flashing.
                                </Run>
                                <LineBreak/>
                                <LineBreak/>
                                <Run FontSize="10" Foreground="{StaticResource TextDisabledBrush}">
                                Copyright (c) 2024-2025 Xman Studio. All rights reserved.
                                </Run>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Engineer Tools Tab -->
            <TabItem Header="Engineer Tools">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="16" DataContext="{Binding EngineerToolsViewModel}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1: FRP Bypass & Screen Lock -->
                        <!-- FRP Bypass -->
                        <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="0,0,8,16">
                            <StackPanel>
                                <TextBlock Text="FRP Bypass" FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Status:" Foreground="{StaticResource TextSecondaryBrush}" Width="80"/>
                                    <TextBlock Text="{Binding FrpStatus}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <WrapPanel Margin="0,8,0,0">
                                    <Button Content="Check FRP" Command="{Binding CheckFrpCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Bypass (ADB)" Command="{Binding BypassFrpAdbCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Bypass (Recovery)" Command="{Binding BypassFrpRecoveryCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Screen Lock Bypass -->
                        <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="8,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Screen Lock Bypass" FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="Lock Type:" Foreground="{StaticResource TextSecondaryBrush}" Width="80"/>
                                    <TextBlock Text="{Binding LockType}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Encrypted:" Foreground="{StaticResource TextSecondaryBrush}" Width="80"/>
                                    <TextBlock Text="{Binding IsEncrypted}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <WrapPanel Margin="0,8,0,0">
                                    <Button Content="Detect Lock" Command="{Binding DetectLockCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="ADB Bypass" Command="{Binding BypassLockAdbCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Recovery" Command="{Binding BypassLockRecoveryCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Root" Command="{Binding BypassLockRootCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Row 2: Network Unlock & IMEI -->
                        <!-- Network Unlock -->
                        <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="0,0,8,16">
                            <StackPanel>
                                <TextBlock Text="Network Unlock" FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="Status:" Foreground="{StaticResource TextSecondaryBrush}" Width="80"/>
                                    <TextBlock Text="{Binding NetworkLockStatus}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Carrier:" Foreground="{StaticResource TextSecondaryBrush}" Width="80"/>
                                    <TextBlock Text="{Binding Carrier}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                                    <TextBlock Text="NCK Code:" Foreground="{StaticResource TextSecondaryBrush}"
                                               Width="80" VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding UnlockCode, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource DarkTextBoxStyle}" Width="150"/>
                                </StackPanel>

                                <WrapPanel>
                                    <Button Content="Check Lock" Command="{Binding CheckNetworkLockCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Unlock" Command="{Binding UnlockNetworkCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Reset APN" Command="{Binding ResetApnCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- IMEI Tools -->
                        <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="8,0,0,16">
                            <StackPanel>
                                <TextBlock Text="IMEI / EFS Tools" FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="IMEI 1:"
                                               Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Imei1}"
                                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Valid"
                                               Foreground="Green" Margin="8,0,0,0"
                                               Visibility="{Binding Imei1Valid, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="IMEI 2:"
                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Imei2}"
                                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Serial:"
                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SerialNumber}"
                                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                                </Grid>

                                <WrapPanel Margin="0,12,0,0">
                                    <Button Content="Read IMEI" Command="{Binding ReadImeiCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Backup EFS" Command="{Binding BackupEfsCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Restore EFS" Command="{Binding RestoreEfsCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Row 3: Recovery Manager & Xiaomi Tools -->
                        <!-- Recovery Manager -->
                        <Border Grid.Row="2" Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="0,0,8,16">
                            <StackPanel>
                                <TextBlock Text="Recovery Manager" FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Current:" Foreground="{StaticResource TextSecondaryBrush}" Width="80"/>
                                    <TextBlock Text="{Binding CurrentRecovery}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBox Text="{Binding RecoveryPath, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource DarkTextBoxStyle}" Width="200" IsReadOnly="True"/>
                                    <Button Content="Browse" Command="{Binding BrowseRecoveryCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="8,0,0,0"/>
                                </StackPanel>

                                <WrapPanel>
                                    <Button Content="Detect" Command="{Binding DetectRecoveryCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Flash" Command="{Binding FlashRecoveryCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Boot Temp" Command="{Binding BootRecoveryCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Reboot Recovery" Command="{Binding RebootRecoveryCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Xiaomi Tools -->
                        <Border Grid.Row="2" Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="8,0,0,16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="Xiaomi Tools" FontSize="16" FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text=" (Xiaomi/Redmi/POCO)" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="Mi Account:" Foreground="{StaticResource TextSecondaryBrush}" Width="100"/>
                                    <TextBlock Text="{Binding MiAccountStatus}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Bootloader:" Foreground="{StaticResource TextSecondaryBrush}" Width="100"/>
                                    <TextBlock Text="{Binding BootloaderStatus}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <WrapPanel Margin="0,8,0,0">
                                    <Button Content="Check Mi Account" Command="{Binding CheckMiAccountCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Check Bootloader" Command="{Binding CheckXiaomiBootloaderCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Remove Mi Account" Command="{Binding RemoveMiAccountCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="Disable Find Device" Command="{Binding DisableFindDeviceCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Row 4: Debloat -->
                        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="200"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="Debloater" FontSize="16" FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text="{Binding Manufacturer, StringFormat=' - {0} Device'}" FontSize="14"
                                               Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom" Margin="8,0,0,0"/>
                                </StackPanel>

                                <WrapPanel Grid.Row="1" Margin="0,0,0,12">
                                    <Button Content="Scan Bloatware" Command="{Binding ScanBloatwareCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                                    <Button Content="Disable Selected" Command="{Binding DisableSelectedCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,0"/>
                                    <Button Content="Uninstall Selected" Command="{Binding UninstallSelectedCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,8,0"/>
                                    <Button Content="Enable All" Command="{Binding EnableAllCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                                </WrapPanel>

                                <DataGrid Grid.Row="2" ItemsSource="{Binding BloatwareApps}"
                                          AutoGenerateColumns="False" IsReadOnly="False"
                                          Background="{StaticResource BackgroundBrush}"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          GridLinesVisibility="Horizontal"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                                        <DataGridTextColumn Header="App Name" Binding="{Binding Name}" Width="200" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Package Name" Binding="{Binding PackageName}" Width="*" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Risk" Binding="{Binding RiskLevel}" Width="80" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <!-- Row 5: Logs -->
                        <Border Grid.Row="4" Grid.ColumnSpan="2" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Engineer Tools Log" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <Button Content="Clear" Command="{Binding ClearLogsCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="16,0,0,0" Padding="8,2"/>
                                    <Button Content="Cancel" Command="{Binding CancelCommand}"
                                            Style="{StaticResource AccentButtonStyle}" Margin="8,0,0,0" Padding="8,2"
                                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <ProgressBar Value="{Binding Progress}" Maximum="100" Width="200" Height="16" Margin="16,0,0,0"
                                                 Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>

                                <ListBox Grid.Row="1" ItemsSource="{Binding Logs}"
                                         Style="{StaticResource DarkListBoxStyle}"
                                         FontFamily="Consolas" FontSize="11"
                                         MinHeight="150"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Flash Tab -->
            <TabItem Header="Flash">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Flash ROM to Device"
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="ROM File:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox Text="{Binding CurrentRomPath}"
                                             Style="{StaticResource DarkTextBoxStyle}"
                                             Width="400" IsReadOnly="True"/>
                                    <Button Content="Browse"
                                            Command="{Binding OpenRomFileCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Target Partition:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,8,0,0"/>
                                <ComboBox Grid.Row="1" Grid.Column="1"
                                          ItemsSource="{Binding DevicePartitions}"
                                          SelectedItem="{Binding SelectedPartition}"
                                          DisplayMemberPath="Name"
                                          Width="200"
                                          HorizontalAlignment="Left"
                                          Margin="0,8,0,0"/>

                                <Button Grid.Row="2" Grid.Column="1"
                                        Content="Flash ROM"
                                        Command="{Binding FlashPartitionCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Left"
                                        Margin="0,16,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Warning"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Grid.Row="1"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <Run FontWeight="Bold">Important Information:</Run>
                                <LineBreak/>
                                <LineBreak/>
                                1. Flashing incorrect ROM may brick your device. Always backup first.
                                <LineBreak/>
                                2. Make sure device is in correct mode (Fastboot for most operations).
                                <LineBreak/>
                                3. Do not disconnect device during flash operation.
                                <LineBreak/>
                                4. Ensure battery is above 50% before flashing.
                                <LineBreak/>
                                5. Use only compatible ROM files for your device model.
                                <LineBreak/>
                                <LineBreak/>
                                <Run FontWeight="Bold" Foreground="{StaticResource AccentBrush}">
                                This tool is provided as-is. Use at your own risk.
                                </Run>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Progress Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0"
                             Value="{Binding ProgressValue}"
                             Maximum="100"
                             Height="20"
                             Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding ProgressText}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"/>
            </Grid>
        </Border>

        <!-- Log Panel -->
        <Border Grid.Row="4" Background="{StaticResource SurfaceBrush}" Margin="8" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Log"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="8,8,8,4"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding LogMessages}"
                         Style="{StaticResource DarkListBoxStyle}"
                         FontFamily="Consolas"
                         FontSize="11"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

            <!-- Status Bar -->
            <Border Grid.Row="5" Background="#0D1117" CornerRadius="0,0,8,8">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Connection Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="8" Height="8" CornerRadius="4" Margin="0,0,6,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#F44336"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDeviceConnected}" Value="True">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <TextBlock Text="{Binding ConnectionStatus, FallbackValue='Disconnected'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>

                    <Border Grid.Column="1" Width="1" Background="#333" Margin="12,6"/>

                    <!-- Device Model -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“±" FontSize="11" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding SelectedDevice.Model, FallbackValue='No Device'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>

                    <!-- Current Operation (Center) -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentOperation, FallbackValue='Ready'}"
                                   Foreground="{StaticResource PrimaryLightBrush}" FontSize="11" FontWeight="Medium"/>
                    </StackPanel>

                    <!-- Data Transfer -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="â†‘" Foreground="#4CAF50" FontSize="11" Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding DataSent, FallbackValue='0 KB'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                        <TextBlock Text="â†“" Foreground="#2196F3" FontSize="11" Margin="8,0,2,0"/>
                        <TextBlock Text="{Binding DataReceived, FallbackValue='0 KB'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>

                    <Border Grid.Column="5" Width="1" Background="#333" Margin="12,6"/>

                    <!-- Version -->
                    <TextBlock Grid.Column="6" Text="{Binding AppVersion, FallbackValue='v1.0.0'}"
                               Foreground="{StaticResource TextDisabledBrush}" FontSize="10"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
