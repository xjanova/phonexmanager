<Window x:Class="PhoneRomFlashTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PhoneRomFlashTool.ViewModels"
        mc:Ignorable="d"
        Title="PhoneX Manager - Xman Studio"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border Background="#0A1628"
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <!-- Floating Background Logo - High Visibility -->
            <Image Source="/Assets/logover.jpeg" Stretch="Uniform" Opacity="0.25"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MaxWidth="900" MaxHeight="600"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   IsHitTestVisible="False"
                   Panel.ZIndex="0"/>

            <!-- Firefly Particles Canvas -->
            <Canvas x:Name="FireflyCanvas" IsHitTestVisible="False" Panel.ZIndex="1"/>

            <!-- Main Content Grid -->
            <Grid Panel.ZIndex="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#DD0A1628" Offset="0"/>
                        <GradientStop Color="#DD0D1B2A" Offset="0.5"/>
                        <GradientStop Color="#DD0A1628" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon + App Name + Version -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                        <Image Source="/Assets/icon.png" Width="26" Height="26" Margin="0,0,10,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="PhoneX Manager" FontSize="14" FontWeight="SemiBold"
                                   Foreground="#FFFFFF" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding AppVersion}" FontSize="11" Margin="10,0,0,0"
                                   Foreground="#00D4FF" VerticalAlignment="Center" FontWeight="Medium"/>
                    </StackPanel>

                    <!-- Center - Empty or subtitle -->
                    <TextBlock Grid.Column="1" Text="Advanced Repair Suite" FontSize="10"
                               Foreground="#4A5568" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontStyle="Italic"/>

                    <!-- Window Controls - High Contrast -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,6,0">
                        <Button Width="38" Height="28" Margin="2" Cursor="Hand" Click="MinimizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="#243447" CornerRadius="4"
                                                        BorderBrush="#3D5A80" BorderThickness="1">
                                                    <TextBlock Text="â”€" FontSize="14" FontWeight="ExtraBold"
                                                               Foreground="#FFFFFF"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#00D4FF"/>
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#4DE8FF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Width="38" Height="28" Margin="2" Cursor="Hand" Click="MaximizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="#243447" CornerRadius="4"
                                                        BorderBrush="#3D5A80" BorderThickness="1">
                                                    <TextBlock Text="â–¡" FontSize="14" FontWeight="ExtraBold"
                                                               Foreground="#FFFFFF"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#00D4FF"/>
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#4DE8FF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Width="38" Height="28" Margin="2" Cursor="Hand" Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="#4A1515" CornerRadius="4"
                                                        BorderBrush="#EF4444" BorderThickness="1">
                                                    <TextBlock x:Name="txt" Text="X" FontSize="13" FontWeight="ExtraBold"
                                                               Foreground="#FF6B6B"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                                        <Setter TargetName="txt" Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Header Bar - Compact -->
            <Border Grid.Row="1" Padding="12,8" Background="#CC0D1B2A">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Connection Status Indicator -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Width="10" Height="10" CornerRadius="5" Margin="0,0,8,0" VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#EF4444"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDeviceConnected}" Value="True">
                                            <Setter Property="Background" Value="#10B981"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <TextBlock Text="{Binding ConnectionStatus, FallbackValue='No Device'}"
                                   FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Device Selector -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ComboBox ItemsSource="{Binding ConnectedDevices}"
                                  SelectedItem="{Binding SelectedDevice}"
                                  DisplayMemberPath="DisplayName"
                                  Width="280"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <Button Command="{Binding RefreshDevicesCommand}"
                                VerticalAlignment="Center" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="#243447" CornerRadius="4"
                                                        Padding="12,6" BorderBrush="#3D5A80" BorderThickness="1">
                                                    <TextBlock Text="Refresh" FontSize="12" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#00D4FF"/>
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#4DE8FF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <TabControl Grid.Row="2" Background="Transparent"
                    Foreground="{StaticResource TextPrimaryBrush}"
                    Margin="8"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">

            <!-- Setup Tab -->
            <TabItem Header="âš™ Setup" DataContext="{Binding SetupViewModel}">
                <TabItem.ToolTip>
                    <TextBlock Text="Install required tools and drivers for Android device flashing" TextWrapping="Wrap" MaxWidth="250"/>
                </TabItem.ToolTip>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Quick Actions -->
                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ðŸ› ï¸ Tools &amp; Driver Setup"
                                               FontSize="22" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Install required tools and drivers for flashing Android devices. Click buttons below to install."
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextWrapping="Wrap" Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Big Install All Button -->
                                <Button Grid.Column="1" Content="â¬‡ï¸ Install Everything"
                                        Command="{Binding InstallAllCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        FontSize="14" Padding="20,12"
                                        ToolTip="Install all tools and drivers at once"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Quick Install Buttons - Very Visible -->
                        <Border Grid.Row="1" Background="#1A2C6B4F" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="âš¡ Quick Install" FontSize="14" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}" Margin="0,0,0,12"/>

                                <WrapPanel Grid.Row="1">
                                    <!-- Platform Tools - BIG Button -->
                                    <Button Command="{Binding InstallPlatformToolsCommand}"
                                            Style="{StaticResource AccentButtonStyle}"
                                            Margin="0,0,8,8" Padding="16,10"
                                            ToolTip="Download and install ADB and Fastboot from Google">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“±" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Install Platform Tools" FontWeight="Bold"/>
                                                <TextBlock Text="ADB + Fastboot" FontSize="10" Opacity="0.8"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Google USB Driver -->
                                    <Button Command="{Binding InstallGoogleDriverCommand}"
                                            Style="{StaticResource WarningButtonStyle}"
                                            Margin="0,0,8,8" Padding="16,10"
                                            ToolTip="Install Google USB driver for ADB/Fastboot connection">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ”Œ" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Google USB Driver" FontWeight="Bold"/>
                                                <TextBlock Text="Required for ADB" FontSize="10" Opacity="0.8"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Samsung Driver -->
                                    <Button Command="{Binding InstallSamsungDriverCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,8,8" Padding="16,10"
                                            ToolTip="Install Samsung USB driver for Odin/Download mode">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“²" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Samsung Driver" FontWeight="Bold"/>
                                                <TextBlock Text="For Download Mode" FontSize="10" Opacity="0.8"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Qualcomm Driver -->
                                    <Button Command="{Binding InstallQualcommDriverCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,8,8" Padding="16,10"
                                            ToolTip="Install Qualcomm QDLoader 9008 driver for EDL mode">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="âš¡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Qualcomm Driver" FontWeight="Bold"/>
                                                <TextBlock Text="For EDL Mode" FontSize="10" Opacity="0.8"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>

                                    <!-- MTK Driver -->
                                    <Button Command="{Binding InstallMtkDriverCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,8,8" Padding="16,10"
                                            ToolTip="Install MediaTek VCOM driver for BROM/Preloader mode">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ”§" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <StackPanel>
                                                <TextBlock Text="MediaTek Driver" FontWeight="Bold"/>
                                                <TextBlock Text="For BROM Mode" FontSize="10" Opacity="0.8"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>
                            </Grid>
                        </Border>

                        <!-- Main Content - Tools and Drivers Lists -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Tools Panel -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="ðŸ“¦" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Tools" FontSize="16" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="("/>
                                            <Run Text="{Binding ToolItems.Count, Mode=OneWay}"/>
                                            <Run Text=" items)"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ToolItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SurfaceLightBrush}"
                                                        CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                                                   FontSize="20" VerticalAlignment="Center"
                                                                   Margin="0,0,12,0"/>

                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"
                                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       FontSize="11" TextWrapping="Wrap"/>
                                                            <TextBlock FontSize="10" Margin="0,4,0,0">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                                <Run Text="{Binding Status}"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <ProgressBar Grid.Column="2" Width="60" Height="6"
                                                                     Value="{Binding Progress}" Maximum="100"
                                                                     Visibility="{Binding IsInstalling, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                     VerticalAlignment="Center" Margin="8,0"/>

                                                        <!-- Install/Uninstall/Web button -->
                                                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                            <!-- Install button (when not installed) -->
                                                            <Button Content="â¬‡ï¸ Install"
                                                                    Command="{Binding DataContext.InstallToolCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding ToolId}"
                                                                    Style="{StaticResource AccentButtonStyle}"
                                                                    Padding="10,4" FontSize="11"
                                                                    Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityInverseConverter}}"
                                                                    ToolTip="Click to install this tool"/>
                                                            <!-- Web download button (always visible when not installed) -->
                                                            <Button Content="ðŸŒ"
                                                                    Command="{Binding DataContext.OpenDownloadPageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding ToolId}"
                                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                                    Padding="6,4" FontSize="11" Margin="4,0,0,0"
                                                                    Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityInverseConverter}}"
                                                                    ToolTip="Open download page in browser (manual install)"/>
                                                            <!-- Uninstall button (when installed) -->
                                                            <Button Content="ðŸ—‘ï¸ Remove"
                                                                    Command="{Binding DataContext.UninstallToolCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding ToolId}"
                                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                                    Padding="10,4" FontSize="11"
                                                                    Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                    ToolTip="Click to remove this tool"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <Button Content="ðŸ“¦ Install All Tools"
                                                Command="{Binding InstallAllToolsCommand}"
                                                Style="{StaticResource AccentButtonStyle}"
                                                ToolTip="Install all tools at once"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Drivers Panel -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="ðŸ”Œ" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Drivers" FontSize="16" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="("/>
                                            <Run Text="{Binding DriverItems.Count, Mode=OneWay}"/>
                                            <Run Text=" items)"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding DriverItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SurfaceLightBrush}"
                                                        CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                                                   FontSize="20" VerticalAlignment="Center"
                                                                   Margin="0,0,12,0"/>

                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"
                                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       FontSize="11" TextWrapping="Wrap"/>
                                                            <TextBlock FontSize="10" Margin="0,4,0,0">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                                <Run Text="{Binding Status}"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <ProgressBar Grid.Column="2" Width="60" Height="6"
                                                                     Value="{Binding Progress}" Maximum="100"
                                                                     Visibility="{Binding IsInstalling, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                     VerticalAlignment="Center" Margin="8,0"/>

                                                        <!-- Install/Uninstall/Web button for drivers -->
                                                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                            <!-- Install button (when not installed) -->
                                                            <Button Content="â¬‡ï¸ Install"
                                                                    Command="{Binding DataContext.InstallDriverCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding ToolId}"
                                                                    Style="{StaticResource WarningButtonStyle}"
                                                                    Padding="10,4" FontSize="11"
                                                                    Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityInverseConverter}}"
                                                                    ToolTip="Click to install this driver (requires admin)"/>
                                                            <!-- Web download button (always visible when not installed) -->
                                                            <Button Content="ðŸŒ"
                                                                    Command="{Binding DataContext.OpenDownloadPageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding ToolId}"
                                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                                    Padding="6,4" FontSize="11" Margin="4,0,0,0"
                                                                    Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityInverseConverter}}"
                                                                    ToolTip="Open download page in browser (manual install)"/>
                                                            <!-- Uninstall button (when installed) -->
                                                            <Button Content="ðŸ—‘ï¸ Remove"
                                                                    Command="{Binding DataContext.UninstallDriverCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding ToolId}"
                                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                                    Padding="10,4" FontSize="11"
                                                                    Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                    ToolTip="Click to remove this driver"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <Button Content="ðŸ”Œ Install All Drivers"
                                                Command="{Binding InstallAllDriversCommand}"
                                                Style="{StaticResource WarningButtonStyle}"
                                                ToolTip="Install all drivers at once (requires admin)"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Status Bar -->
                        <Border Grid.Row="3" Background="{StaticResource SurfaceLightBrush}"
                                CornerRadius="8" Padding="16,12" Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Status Icon -->
                                <TextBlock Grid.Column="0" FontSize="18" VerticalAlignment="Center" Margin="0,0,12,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="â„¹ï¸"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsInstalling}" Value="True">
                                                    <Setter Property="Text" Value="â³"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Status Text -->
                                <TextBlock Grid.Column="1" Text="{Binding CurrentStatus}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontSize="13" VerticalAlignment="Center"/>

                                <!-- Progress Bar -->
                                <ProgressBar Grid.Column="2" Width="200" Height="8"
                                             Value="{Binding OverallProgress}"
                                             Visibility="{Binding IsInstalling, Converter={StaticResource BoolToVisibilityConverter}}"
                                             VerticalAlignment="Center" Margin="16,0,0,0"/>

                                <!-- Open Folder Button -->
                                <Button Grid.Column="3" Content="ðŸ“‚ Open Tools Folder"
                                        Command="{Binding OpenToolsFolderCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="16,0,0,0" Padding="12,6"
                                        ToolTip="Open the folder containing installed tools"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Device Tab -->
            <TabItem Header="Device">
                <Grid Margin="16">
                    <!-- No Device Connected State -->
                    <Border Visibility="{Binding IsDeviceConnected, Converter={StaticResource BoolToVisibilityInverseConverter}}"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="12" Padding="40"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- Phone Icon -->
                            <Border Width="120" Height="200" CornerRadius="16"
                                    Background="{StaticResource SurfaceLightBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3"
                                    HorizontalAlignment="Center" Margin="0,0,0,24">
                                <Grid>
                                    <!-- Screen area -->
                                    <Border Margin="8,20,8,30" CornerRadius="4"
                                            Background="{StaticResource SurfaceElevatedBrush}">
                                        <TextBlock Text="?" FontSize="48" FontWeight="Light"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <!-- Home button -->
                                    <Ellipse Width="20" Height="20" Fill="{StaticResource SurfaceElevatedBrush}"
                                             VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                </Grid>
                            </Border>
                            <TextBlock Text="No Device Connected"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Connect your Android device via USB"
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Make sure USB Debugging is enabled"
                                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <Button Content="Refresh Devices"
                                    Command="{Binding RefreshDevicesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Center" Padding="24,10"/>
                        </StackPanel>
                    </Border>

                    <!-- Device Connected State -->
                    <Grid Visibility="{Binding IsDeviceConnected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="340"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Device Info Panel with Image -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="12" Padding="20" Margin="0,0,8,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Device Image/Icon -->
                                <Border Grid.Row="0" Width="140" Height="220" CornerRadius="16"
                                        HorizontalAlignment="Center" Margin="0,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2D2D2D" Offset="0"/>
                                            <GradientStop Color="#1E1E1E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                                    </Border.Effect>
                                    <Grid>
                                        <!-- Phone frame -->
                                        <Border Margin="6,14,6,24" CornerRadius="8"
                                                Background="{StaticResource SurfaceElevatedBrush}">
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <!-- Brand Icon -->
                                                <TextBlock Text="{Binding SelectedDevice.Brand, FallbackValue='?'}"
                                                           FontSize="18" FontWeight="Bold"
                                                           Foreground="{StaticResource PrimaryBrush}"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedDevice.Model, FallbackValue=''}"
                                                           FontSize="11" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           HorizontalAlignment="Center" TextWrapping="Wrap"
                                                           TextAlignment="Center" Margin="4,4,4,0"/>
                                            </StackPanel>
                                        </Border>
                                        <!-- Home button indicator -->
                                        <Ellipse Width="16" Height="16"
                                                 VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,5">
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{StaticResource SuccessColor}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>
                                </Border>

                                <!-- Device Name -->
                                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,16">
                                    <TextBlock Text="{Binding SelectedDevice.DisplayName, FallbackValue='Unknown Device'}"
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center" TextWrapping="Wrap"
                                               TextAlignment="Center"/>
                                    <Border Background="{StaticResource SuccessBrush}"
                                            CornerRadius="10" Padding="12,4" Margin="0,8,0,0"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="Connected" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <!-- Device Details -->
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <Border Background="{StaticResource SurfaceLightBrush}"
                                                CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Android"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12" Width="80"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding SelectedDevice.AndroidVersion, FallbackValue='-'}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="SemiBold" FontSize="12"/>
                                            </Grid>
                                        </Border>

                                        <Border Background="{StaticResource SurfaceLightBrush}"
                                                CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Serial"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12" Width="80"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding SelectedDevice.SerialNumber, FallbackValue='-'}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="SemiBold" FontSize="11"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </Grid>
                                        </Border>

                                        <Border Background="{StaticResource SurfaceLightBrush}"
                                                CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Mode"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12" Width="80"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding SelectedDevice.Mode, FallbackValue='-'}"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           FontWeight="Bold" FontSize="12"/>
                                            </Grid>
                                        </Border>

                                        <Border Background="{StaticResource SurfaceLightBrush}"
                                                CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Connection"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12" Width="80"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding SelectedDevice.ConnectionType, FallbackValue='-'}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="SemiBold" FontSize="12"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>

                                <!-- Reboot Actions -->
                                <Border Grid.Row="3" Background="{StaticResource SurfaceLightBrush}"
                                        CornerRadius="8" Padding="12" Margin="0,8,0,0">
                                    <StackPanel>
                                        <TextBlock Text="REBOOT TO" FontSize="10" FontWeight="Bold"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,8"/>
                                        <UniformGrid Columns="3">
                                            <Button Content="Recovery"
                                                    Command="{Binding RebootToModeCommand}"
                                                    CommandParameter="recovery"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="4,6" Margin="2" FontSize="11"/>
                                            <Button Content="Fastboot"
                                                    Command="{Binding RebootToModeCommand}"
                                                    CommandParameter="fastboot"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="4,6" Margin="2" FontSize="11"/>
                                            <Button Content="System"
                                                    Command="{Binding RebootToModeCommand}"
                                                    CommandParameter="normal"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="4,6" Margin="2" FontSize="11"/>
                                        </UniformGrid>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Partitions Panel -->
                        <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="12" Padding="20" Margin="8,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                    <TextBlock Text="Device Partitions"
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                    <Button Content="Load Partitions"
                                            Command="{Binding LoadPartitionsCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="16,0,0,0"/>
                                </StackPanel>

                                <DataGrid Grid.Row="1"
                                          ItemsSource="{Binding DevicePartitions}"
                                          SelectedItem="{Binding SelectedPartition}"
                                          Style="{StaticResource DarkDataGridStyle}"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                        <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Backup Tab -->
            <TabItem Header="Backup">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="Backup Selected Partition"
                                Command="{Binding BackupPartitionCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                IsEnabled="{Binding SelectedPartition, Converter={StaticResource NullToBoolConverter}}"/>
                        <Button Content="Backup Full ROM"
                                Command="{Binding BackupFullRomCommand}"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Backup History"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding BackupHistory}"
                                     Style="{StaticResource DarkListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding FileName}"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding DeviceModel}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding BackupDate, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding FileSizeFormatted}"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Hex Editor Tab -->
            <TabItem Header="Hex Editor">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="8" Margin="0,0,0,8">
                        <WrapPanel>
                            <Button Content="Open Full Hex Editor"
                                    Command="{Binding OpenHexEditorWindowCommand}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    FontWeight="Bold"/>
                            <Separator Width="20" Background="Transparent"/>
                            <Button Content="Open ROM"
                                    Command="{Binding OpenRomFileCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Save"
                                    Command="{Binding SaveRomFileCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Export Hex Dump"
                                    Command="{Binding ExportHexDumpCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Export Analysis"
                                    Command="{Binding ExportAnalysisCommand}"
                                    Style="{StaticResource AccentButtonStyle}"/>
                            <Separator Width="20" Background="Transparent"/>
                            <Button Content="Undo"
                                    Command="{Binding UndoHexChangeCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Undo All"
                                    Command="{Binding UndoAllHexChangesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </WrapPanel>
                    </Border>

                    <!-- Search Panel -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="8" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,0">
                                <TextBlock Text="Hex:" Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Text="{Binding SearchHexPattern, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         Width="200"/>
                                <Button Content="Search"
                                        Command="{Binding SearchHexCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="String:" Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Text="{Binding SearchStringPattern, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource DarkTextBoxStyle}"
                                         Width="200"/>
                                <Button Content="Search"
                                        Command="{Binding SearchStringCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Main Hex View -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Hex Data Grid -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="8" Margin="0,0,8,0">
                            <DataGrid ItemsSource="{Binding HexLines}"
                                      Style="{StaticResource DarkDataGridStyle}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      FontFamily="Consolas"
                                      FontSize="13">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Offset" Binding="{Binding OffsetHex}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Hex" Binding="{Binding HexString}" Width="400">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="ASCII" Binding="{Binding AsciiString}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <!-- Search Results & Analysis -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Search Results -->
                            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                                    CornerRadius="8" Padding="8" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Search Results"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>

                                    <ListBox Grid.Row="1"
                                             ItemsSource="{Binding SearchResults}"
                                             SelectedItem="{Binding SelectedSearchResult}"
                                             Style="{StaticResource DarkListBoxStyle}"
                                             FontFamily="Consolas">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Foreground="{StaticResource AccentBrush}">
                                                        <Run Text="0x"/><Run Text="{Binding Offset, StringFormat=X8}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Context}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>

                            <!-- ROM Analysis -->
                            <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                                    CornerRadius="8" Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="ROM Analysis"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>

                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="{Binding RomAnalysis.FileType, StringFormat='Type: {0}'}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding RomAnalysis.FileSize, StringFormat='Size: {0:N0} bytes'}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="Patterns:"
                                                       Foreground="{StaticResource AccentBrush}"
                                                       Margin="0,8,0,0"/>
                                            <ItemsControl ItemsSource="{Binding RomAnalysis.DetectedPatterns}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   Margin="8,2,0,0"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Downloads Tab -->
            <TabItem Header="Downloads">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Update Check Panel -->
                    <Border Grid.Row="0" Grid.ColumnSpan="2"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Tools &amp; Drivers Update"
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0">
                                    <Run Text="Last checked: "/>
                                    <Run Text="{Binding LastUpdateCheck, Mode=OneWay, StringFormat=yyyy-MM-dd HH:mm}"/>
                                </TextBlock>
                                <TextBlock Foreground="{StaticResource AccentBrush}"
                                           FontWeight="Bold">
                                    <Run Text="{Binding ToolsInstalled, Mode=OneWay}"/>
                                    <Run Text=" tools installed"/>
                                </TextBlock>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="Check for Updates"
                                    Command="{Binding CheckForUpdatesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Grid.Column="2"
                                    Content="Download All Essentials"
                                    Command="{Binding DownloadAllEssentialsCommand}"
                                    Style="{StaticResource AccentButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Tools Panel -->
                    <Border Grid.Row="1" Grid.Column="0"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Essential Tools"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>

                            <Button Grid.Row="1"
                                    Content="Download Platform Tools (ADB/Fastboot)"
                                    Command="{Binding DownloadPlatformToolsCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,16"/>

                            <ListBox Grid.Row="2"
                                     ItemsSource="{Binding AvailableTools}"
                                     Style="{StaticResource DarkListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Version}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding Path}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding IsInstalled, Converter={StaticResource BoolToStatusConverter}}"
                                                           Foreground="{Binding IsInstalled, Converter={StaticResource BoolToColorConverter}}"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- Drivers Panel -->
                    <Border Grid.Row="1" Grid.Column="1"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="8,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Mobile Drivers"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding AvailableDrivers}"
                                     Style="{StaticResource DarkListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Version}"
                                                               Foreground="{StaticResource AccentBrush}"
                                                               FontSize="10"/>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Content="Download"
                                                        Command="{Binding DataContext.DownloadDriverCommand, RelativeSource={RelativeSource AncestorType=Window}}"
