<Window x:Class="PhoneRomFlashTool.Views.HexEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PhoneRomFlashTool.ViewModels"
        mc:Ignorable="d"
        Title="Hex Editor - PhoneX Manager"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:HexEditorViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundDark" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BackgroundMedium" Color="#252526"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9D9D9D"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#4EC9B0"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#CE9178"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F14C4C"/>
        <SolidColorBrush x:Key="HighlightColor" Color="#264F78"/>
        <SolidColorBrush x:Key="ModifiedColor" Color="#6B4C00"/>

        <!-- Hex Byte Style -->
        <Style x:Key="HexByteStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>

        <!-- ASCII Char Style -->
        <Style x:Key="AsciiCharStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource AccentOrange}"/>
        </Style>

        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BackgroundLight}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Panel Header Style -->
        <Style x:Key="PanelHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding OpenFileCommand}"/>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveFileCommand}"/>
        <KeyBinding Key="F" Modifiers="Control" Command="{Binding ShowSearchCommand}"/>
        <KeyBinding Key="G" Modifiers="Control" Command="{Binding ShowGoToCommand}"/>
        <KeyBinding Key="Z" Modifiers="Control" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Y" Modifiers="Control" Command="{Binding RedoCommand}"/>
        <KeyBinding Key="B" Modifiers="Control" Command="{Binding AddBookmarkCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{StaticResource BackgroundMedium}" Foreground="{StaticResource TextPrimary}">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding OpenFileCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save" Command="{Binding SaveFileCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}"/>
                <Separator/>
                <MenuItem Header="_Export">
                    <MenuItem Header="Export as Hex Dump..." Command="{Binding ExportHexDumpCommand}"/>
                    <MenuItem Header="Export Selection..." Command="{Binding ExportSelectionCommand}"/>
                    <MenuItem Header="Export Analysis Report..." Command="{Binding ExportAnalysisCommand}"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Recent Files" ItemsSource="{Binding RecentFiles}">
                    <MenuItem.ItemTemplate>
                        <DataTemplate>
                            <MenuItem Header="{Binding}" Command="{Binding DataContext.OpenRecentCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding CloseCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="{Binding CutCommand}" InputGestureText="Ctrl+X"/>
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}" InputGestureText="Ctrl+V"/>
                <MenuItem Header="_Delete" Command="{Binding DeleteCommand}" InputGestureText="Del"/>
                <Separator/>
                <MenuItem Header="Select _All" Command="{Binding SelectAllCommand}" InputGestureText="Ctrl+A"/>
                <MenuItem Header="Select _Block..." Command="{Binding SelectBlockCommand}"/>
            </MenuItem>
            <MenuItem Header="_Search">
                <MenuItem Header="_Find..." Command="{Binding ShowSearchCommand}" InputGestureText="Ctrl+F"/>
                <MenuItem Header="Find _Next" Command="{Binding FindNextCommand}" InputGestureText="F3"/>
                <MenuItem Header="Find _Previous" Command="{Binding FindPreviousCommand}" InputGestureText="Shift+F3"/>
                <Separator/>
                <MenuItem Header="_Replace..." Command="{Binding ShowReplaceCommand}" InputGestureText="Ctrl+H"/>
                <MenuItem Header="Replace All" Command="{Binding ReplaceAllCommand}"/>
                <Separator/>
                <MenuItem Header="_Go to Offset..." Command="{Binding ShowGoToCommand}" InputGestureText="Ctrl+G"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Bytes per Line">
                    <MenuItem Header="8 bytes" Command="{Binding SetBytesPerLineCommand}" CommandParameter="8"/>
                    <MenuItem Header="16 bytes" Command="{Binding SetBytesPerLineCommand}" CommandParameter="16" IsChecked="{Binding Is16BytesPerLine}"/>
                    <MenuItem Header="32 bytes" Command="{Binding SetBytesPerLineCommand}" CommandParameter="32"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Show _Data Inspector" IsCheckable="True" IsChecked="{Binding ShowDataInspector}"/>
                <MenuItem Header="Show _Bookmarks" IsCheckable="True" IsChecked="{Binding ShowBookmarks}"/>
                <MenuItem Header="Show _Structure View" IsCheckable="True" IsChecked="{Binding ShowStructureView}"/>
                <Separator/>
                <MenuItem Header="_Highlight Modified" IsCheckable="True" IsChecked="{Binding HighlightModified}"/>
                <MenuItem Header="Show _Offsets in Hex" IsCheckable="True" IsChecked="{Binding ShowOffsetsInHex}"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Compare Files..." Command="{Binding CompareFilesCommand}"/>
                <MenuItem Header="Check_sum Calculator..." Command="{Binding ShowChecksumCommand}"/>
                <Separator/>
                <MenuItem Header="_Fill Selection..." Command="{Binding FillSelectionCommand}"/>
                <MenuItem Header="Insert _Bytes..." Command="{Binding InsertBytesCommand}"/>
                <Separator/>
                <MenuItem Header="_Analyze File" Command="{Binding AnalyzeFileCommand}"/>
                <MenuItem Header="Find _Patterns" Command="{Binding FindPatternsCommand}"/>
                <MenuItem Header="Find _Strings" Command="{Binding FindStringsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Bookmarks">
                <MenuItem Header="_Add Bookmark" Command="{Binding AddBookmarkCommand}" InputGestureText="Ctrl+B"/>
                <MenuItem Header="_Manage Bookmarks..." Command="{Binding ManageBookmarksCommand}"/>
                <Separator/>
                <MenuItem Header="Previous Bookmark" Command="{Binding PrevBookmarkCommand}" InputGestureText="Ctrl+Up"/>
                <MenuItem Header="Next Bookmark" Command="{Binding NextBookmarkCommand}" InputGestureText="Ctrl+Down"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Keyboard Shortcuts" Command="{Binding ShowShortcutsCommand}"/>
                <MenuItem Header="_About" Command="{Binding ShowAboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundMedium}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="4">
            <WrapPanel>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding OpenFileCommand}" ToolTip="Open File (Ctrl+O)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x1F4C2;" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="Open"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding SaveFileCommand}" ToolTip="Save File (Ctrl+S)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x1F4BE;" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="Save"/>
                    </StackPanel>
                </Button>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4"/>

                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding UndoCommand}" ToolTip="Undo (Ctrl+Z)">
                    <TextBlock Text="&#x21B6;" FontSize="14"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding RedoCommand}" ToolTip="Redo (Ctrl+Y)">
                    <TextBlock Text="&#x21B7;" FontSize="14"/>
                </Button>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4"/>

                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding ShowSearchCommand}" ToolTip="Find (Ctrl+F)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x1F50D;" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="Find"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding ShowGoToCommand}" ToolTip="Go to Offset (Ctrl+G)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x27A1;" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="Go To"/>
                    </StackPanel>
                </Button>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4"/>

                <!-- Quick Go To Offset -->
                <TextBlock Text="Offset:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="4,0"/>
                <TextBox x:Name="QuickGoToBox" Width="100" Background="{StaticResource BackgroundDark}"
                         Foreground="{StaticResource TextPrimary}" BorderBrush="{StaticResource BorderColor}"
                         Padding="4,2" VerticalAlignment="Center"
                         Text="{Binding QuickGoToOffset, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding QuickGoToCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding QuickGoToCommand}" Content="Go" Margin="4,0"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4"/>

                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding CompareFilesCommand}" ToolTip="Compare Files">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2194;" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="Compare"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding AnalyzeFileCommand}" ToolTip="Analyze File">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x1F9EA;" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="Analyze"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="280" x:Name="RightPanelColumn"/>
            </Grid.ColumnDefinitions>

            <!-- Hex View Area -->
            <Border Grid.Column="0" Background="{StaticResource BackgroundDark}" Margin="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Column Headers -->
                    <Border Grid.Row="0" Background="{StaticResource BackgroundLight}" Padding="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Offset" Style="{StaticResource PanelHeaderStyle}" Margin="0"/>
                            <TextBlock Grid.Column="1" Text="00 01 02 03 04 05 06 07 08 09 0A 0B 0C 0D 0E 0F"
                                       FontFamily="Consolas" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Grid.Column="2" Text="ASCII" Style="{StaticResource PanelHeaderStyle}" Margin="8,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Hex Content -->
                    <ScrollViewer Grid.Row="1" x:Name="HexScrollViewer"
                                  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                  Background="{StaticResource BackgroundDark}">
                        <ItemsControl ItemsSource="{Binding DisplayLines}" VirtualizingStackPanel.IsVirtualizing="True">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="20" Background="{Binding Background}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="180"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Offset -->
                                        <TextBlock Grid.Column="0" Text="{Binding OffsetText}"
                                                   FontFamily="Consolas" FontSize="13"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   VerticalAlignment="Center" Padding="4,0"/>

                                        <!-- Hex Bytes -->
                                        <TextBlock Grid.Column="1" Text="{Binding HexText}"
                                                   FontFamily="Consolas" FontSize="13"
                                                   Foreground="{StaticResource AccentGreen}"
                                                   VerticalAlignment="Center"/>

                                        <!-- ASCII -->
                                        <TextBlock Grid.Column="2" Text="{Binding AsciiText}"
                                                   FontFamily="Consolas" FontSize="13"
                                                   Foreground="{StaticResource AccentOrange}"
                                                   VerticalAlignment="Center" Padding="8,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="4" Background="{StaticResource BorderColor}" HorizontalAlignment="Center"/>

            <!-- Right Panel (Data Inspector, Bookmarks, Structure) -->
            <Border Grid.Column="2" Background="{StaticResource BackgroundMedium}" Margin="4"
                    Visibility="{Binding RightPanelVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Visible}">
                <TabControl Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="8,4"/>
                        </Style>
                    </TabControl.Resources>

                    <!-- Data Inspector Tab -->
                    <TabItem Header="Data Inspector">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                            <StackPanel>
                                <TextBlock Style="{StaticResource PanelHeaderStyle}" Text="DATA INSPECTOR"/>
                                <TextBlock Text="{Binding SelectedOffsetText}" Foreground="{StaticResource AccentBlue}" Margin="0,0,0,12"/>

                                <!-- Signed Integers -->
                                <TextBlock Text="Signed" Foreground="{StaticResource TextSecondary}" Margin="0,8,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Int8:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DataInt8}" Foreground="{StaticResource TextPrimary}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Int16:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DataInt16}" Foreground="{StaticResource TextPrimary}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Int32:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DataInt32}" Foreground="{StaticResource TextPrimary}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Int64:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DataInt64}" Foreground="{StaticResource TextPrimary}"/>
                                </Grid>

                                <!-- Unsigned Integers -->
                                <TextBlock Text="Unsigned" Foreground="{StaticResource TextSecondary}" Margin="0,12,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="UInt8:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DataUInt8}" Foreground="{StaticResource TextPrimary}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="UInt16:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DataUInt16}" Foreground="{StaticResource TextPrimary}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="UInt32:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DataUInt32}" Foreground="{StaticResource TextPrimary}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="UInt64:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DataUInt64}" Foreground="{StaticResource TextPrimary}"/>
                                </Grid>

                                <!-- Float/Double -->
                                <TextBlock Text="Floating Point" Foreground="{StaticResource TextSecondary}" Margin="0,12,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Float:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DataFloat}" Foreground="{StaticResource TextPrimary}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Double:" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DataDouble}" Foreground="{StaticResource TextPrimary}"/>
                                </Grid>

                                <!-- String -->
                                <TextBlock Text="String (UTF-8)" Foreground="{StaticResource TextSecondary}" Margin="0,12,0,4"/>
                                <TextBox Text="{Binding DataString}" IsReadOnly="True"
                                         Background="{StaticResource BackgroundDark}"
                                         Foreground="{StaticResource TextPrimary}"
                                         BorderBrush="{StaticResource BorderColor}"
                                         TextWrapping="Wrap" MaxHeight="60"/>

                                <!-- Binary -->
                                <TextBlock Text="Binary" Foreground="{StaticResource TextSecondary}" Margin="0,12,0,4"/>
                                <TextBox Text="{Binding DataBinary}" IsReadOnly="True"
                                         Background="{StaticResource BackgroundDark}"
                                         Foreground="{StaticResource TextPrimary}"
                                         BorderBrush="{StaticResource BorderColor}"
                                         FontFamily="Consolas" FontSize="11"/>

                                <!-- Endianness Toggle -->
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <TextBlock Text="Endianness:" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <RadioButton Content="Little" IsChecked="{Binding IsLittleEndian}" Foreground="{StaticResource TextPrimary}" Margin="0,0,8,0"/>
                                    <RadioButton Content="Big" IsChecked="{Binding IsBigEndian}" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Bookmarks Tab -->
                    <TabItem Header="Bookmarks">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource PanelHeaderStyle}" Text="BOOKMARKS"/>

                            <ListBox Grid.Row="1" ItemsSource="{Binding Bookmarks}"
                                     SelectedItem="{Binding SelectedBookmark}"
                                     Background="{StaticResource BackgroundDark}"
                                     BorderBrush="{StaticResource BorderColor}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="4">
                                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource AccentBlue}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding OffsetText}" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                                            <TextBlock Text="{Binding Description}" Foreground="{StaticResource TextSecondary}" FontSize="11"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="Add" Style="{StaticResource ToolbarButtonStyle}" Command="{Binding AddBookmarkCommand}" Width="60"/>
                                <Button Content="Go" Style="{StaticResource ToolbarButtonStyle}" Command="{Binding GoToBookmarkCommand}" Width="60"/>
                                <Button Content="Delete" Style="{StaticResource ToolbarButtonStyle}" Command="{Binding DeleteBookmarkCommand}" Width="60"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!-- Structure Tab -->
                    <TabItem Header="Structure">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource PanelHeaderStyle}" Text="FILE STRUCTURE"/>

                            <TreeView Grid.Row="1" ItemsSource="{Binding FileStructure}"
                                      Background="{StaticResource BackgroundDark}"
                                      BorderBrush="{StaticResource BorderColor}">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimary}"/>
                                            <TextBlock Text="{Binding OffsetInfo}" Foreground="{StaticResource TextSecondary}" Margin="8,0,0,0" FontSize="11"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </Grid>
                    </TabItem>

                    <!-- Search Results Tab -->
                    <TabItem Header="Results">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock Style="{StaticResource PanelHeaderStyle}" Text="SEARCH RESULTS"/>
                                <TextBlock Text="{Binding SearchResultsCount, StringFormat='Found {0} matches'}"
                                           Foreground="{StaticResource TextSecondary}" Margin="0,0,0,8"/>
                            </StackPanel>

                            <ListBox Grid.Row="1" ItemsSource="{Binding SearchResults}"
                                     SelectedItem="{Binding SelectedSearchResult}"
                                     Background="{StaticResource BackgroundDark}"
                                     BorderBrush="{StaticResource BorderColor}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="4">
                                            <TextBlock Text="{Binding OffsetText}" Foreground="{StaticResource AccentBlue}"/>
                                            <TextBlock Text="{Binding PreviewText}" Foreground="{StaticResource TextSecondary}"
                                                       FontFamily="Consolas" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource BackgroundLight}" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondary}"/>

                <TextBlock Grid.Column="1" Text="{Binding FileSizeText}" Foreground="{StaticResource TextSecondary}" Margin="16,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0">
                    <TextBlock Text="Offset: " Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock Text="{Binding CurrentOffsetHex}" Foreground="{StaticResource AccentBlue}"/>
                    <TextBlock Text=" (" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock Text="{Binding CurrentOffsetDec}" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text=")" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="16,0">
                    <TextBlock Text="Selection: " Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock Text="{Binding SelectionLength}" Foreground="{StaticResource AccentGreen}"/>
                    <TextBlock Text=" bytes" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <TextBlock Grid.Column="4" Text="{Binding ModifiedIndicator}" Foreground="{StaticResource AccentOrange}" Margin="16,0"/>

                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <TextBlock Text="INS" Foreground="{Binding InsertModeColor}" Margin="8,0"/>
                    <TextBlock Text="{Binding EncodingName}" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
