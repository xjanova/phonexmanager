<Window x:Class="PhoneRomFlashTool.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhoneX Manager"
        Width="500" Height="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">

    <Border CornerRadius="16" Margin="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A1628" Offset="0"/>
                <GradientStop Color="#0D1B2A" Offset="0.5"/>
                <GradientStop Color="#1B2838" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- Logo -->
            <Image Grid.Row="0"
                   Source="/Assets/logo11.png"
                   Stretch="Uniform"
                   Margin="40,30,40,10"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Loading Text -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,5">
                <TextBlock x:Name="LoadingText"
                           Text="Loading..."
                           FontSize="14"
                           FontWeight="Medium"
                           HorizontalAlignment="Center">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="#8892A0"/>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>

            <!-- Progress Bar -->
            <Grid Grid.Row="2" Margin="50,5,50,15">
                <Border Background="#1E3A5F" CornerRadius="4" Height="8"/>
                <Border x:Name="ProgressFill"
                        Background="#00D4FF"
                        CornerRadius="4"
                        Height="8"
                        HorizontalAlignment="Left"
                        Width="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#00D4FF" Opacity="0.5"/>
                    </Border.Effect>
                </Border>
            </Grid>

            <!-- Version -->
            <TextBlock Grid.Row="3"
                       Text="v1.0.0 - Xman Studio"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,10">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="#4A5568"/>
                </TextBlock.Foreground>
            </TextBlock>
        </Grid>
    </Border>
</Window>
